<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Food.styles.css" asp-append-version="true" />
	<!-- DataTables CSS -->
	<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="~/css/style.css">

	<title>Foodie</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<span class="navbar-brand brand-large" asp-area="" asp-page="/Index">Foodie</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a href="/Admin/Dashboard">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/Admin/Category">
					<i class='bx bxs-shopping-bag-alt'></i>
					<span class="text">Categories</span>
				</a>
			</li>
			<li>
				<a href="/Admin/ViewProduct">
					<i class='bx bxs-shopping-bag-alt'></i>
					<span class="text">Products</span>
				</a>
			</li>
			<li>
				<a href="/Admin/ManageOrders">
					<i class='bx bxs-doughnut-chart'></i>
					<span class="text">Order Status</span>
				</a>
			</li>			
			<li>
				<a href="/Admin/ManageUsers">
					<i class='bx bxs-group'></i>
					<span class="text">Users</span>
				</a>
			</li>
			<li>
				<a href="/Admin/Contacts">
					<i class='bx bxs-group'></i>
					<span class="text">Contacts</span>
				</a>
			</li>
			
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/Users/Logout" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->
	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			
		</nav>
		<!-- NAVBAR -->
		<!-- MAIN -->
		<main>
			<div class="head-title">
				
				@RenderBody()

			</div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->


	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<!-- DataTables JS -->
	<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

	<script src="~/js/script.js"></script>
</body>
</html>