@page
@model Food.Pages.Admin.ManageUsersModel
@{
    Layout = "_AdminLayout";
}

<div class="left">
    <h1>Manage Users</h1>
    <ul class="breadcrumb">
        <li>
            <a href="#">Manage Users</a>
        </li>
        <li><i class='bx bx-chevron-right'></i></li>
        <li>
            <a class="active" href="#">Home</a>
        </li>
    </ul>
</div>

<div class="table-container">
    <table id="userTable" class="display">
        <thead>
            <tr>
                <th>SrNo</th>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Joined Date</th>
                <th>Verify Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int srNo = 1;
            }
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@srNo</td>
                    <td>@user.Name</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.CreatedDate.ToString("dd-MM-yyyy hh:mm:ss tt")</td>
                    <td>@(user.IsEmailVerified ? "Verified" : "Not Verified")</td>
                    <td>
                        <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.UserId" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
                srNo++;
            }
        </tbody>
    </table>
</div>

<div class="pagination-container">
    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a asp-page="/Admin/ManageUsers" asp-route-page="@(Model.CurrentPage - 1)" class="page-link">Trước</a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-page="/Admin/ManageUsers" asp-route-page="@i" class="page-link @(i == Model.CurrentPage ? "active" : "")">@i</a>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-page="/Admin/ManageUsers" asp-route-page="@(Model.CurrentPage + 1)" class="page-link">Sau</a>
        }
    </div>
</div>

<style>
    .left {
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    table.display {
        width: 80%;
        border-collapse: collapse;
        text-align: center;
    }

        table.display th, table.display td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        table.display th {
            background-color: #f2f2f2;
        }

    .delete-btn {
        color: #fff;
        background-color: #d9534f;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
    }

        .delete-btn:hover {
            background-color: #c9302c;
        }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        width: 100%;
    }

    .pagination {
        display: inline-block;
        text-align: center;
    }

        .pagination .page-link {
            color: #007bff;
            padding: 10px 15px;
            text-decoration: none;
            margin: 0 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .pagination .page-link:hover {
                background-color: #f0f0f0;
            }

        .pagination .active {
            background-color: #007bff;
            color: #fff;
            border: 1px solid #007bff;
        }
</style>
