@page
@model Food.Pages.Admin.CreateCategoryModel
@{
    ViewData["Title"] = "Create Category";
    Layout = "_AdminLayout";
}
<div class="container mt-5">
    <h2 class="text-uppercase">Add Category</h2>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">Add New Category</div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="CategoryName">Category Name</label>
                            <input type="text" class="form-control" id="CategoryName" asp-for="Category.Name" placeholder="Enter Category Name" />
                        </div>
                        <div class="form-group">
                            <label for="CategoryImage">Category Image</label>
                            <input type="file" class="form-control-file" id="CategoryImage" name="CategoryImage" />
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="IsActive" asp-for="Category.IsActive" />
                            <label class="form-check-label" for="IsActive">Is Active</label>
                        </div>

                        <!-- Nút Add -->
                        <button type="submit" class="btn btn-primary mt-3">Add</button>
                        <!-- Nút Clear -->
                        <button type="button" class="btn btn-secondary mt-3" onclick="clearForm()">Clear</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="messagesList"></div>

<!-- Thêm các script sau cùng của trang -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
<script src="~/js/signalr.js"></script> <!-- Liên kết đến tệp JS mà bạn đã tạo -->

<script>
    function clearForm() {
        document.getElementById("CategoryName").value = "";
        document.getElementById("IsActive").checked = false;
    }
</script>