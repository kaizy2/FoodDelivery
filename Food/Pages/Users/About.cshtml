@page
@model Food.Pages.Users.AboutModel
@{
    Layout = "/Pages/Users/Shared/_LayoutUser.cshtml";

    ViewData["Title"] = "About Us";
}

<section class="about_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/TemplateFiles/images/about-img.png" alt="About Us">
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <div class="heading_container">
                        <h2>Our Categories</h2>
                    </div>
                    <ul>
                        @foreach (var category in Model.Categories)
                        {
                            <li>
                                <strong>@category.Name</strong> <br />
                                <img src="@category.ImageUrl" alt="@category.Name" style="width: 100px; height: auto;" />
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


