@page
@model Food.Pages.Users.CartModel
@{
    ViewBag.Title = "Payment Canceled";
}

<section class="container mt-5">
    <div class="alert alert-warning text-center">
        <h2>Payment Canceled</h2>
        <p>Your payment has been canceled. If this was a mistake, please try again.</p>
        <a href="/Users/Carts" class="btn btn-primary">Return to Cart</a>
    </div>
</section>

@* Automatically call the CancelPayment method in the CartModel *@
@{
    var orderIds = HttpContext.Request.Query["orderIds"];
    Model.CancelPayment(orderIds).Wait();
}
