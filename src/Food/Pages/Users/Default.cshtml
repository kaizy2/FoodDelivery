@page
@model Food.Pages.Users.DefaultModel
@{
    Layout = "/Pages/Users/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Default";
}

<!-- offer section -->
<section class="offer_section layout_padding-bottom">
    <div class="offer_container">
        <div class="container">
            <div class="row">
                <!-- Loop through products dynamically -->
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-6">
                        <div class="box">
                            <div class="img-box">
                                <!-- Product Image -->
                                <img src="@product.ImageUrl" alt="" />
                            </div>
                            <div class="detail-box">
                                <!-- Product Name -->
                                <h5>@product.Name</h5>
                                <!-- Product Discount -->
                                <h6><span>$@product.Price</span></h6>
                                <!-- Link to Order Now -->
                                <form id="cartForm-@product.ProductId" method="post" asp-page-handler="AddToCart">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ProductId" value="@product.ProductId" />
                                </form>

                                <!-- Thẻ <a> nhưng dùng JavaScript để submit form -->
                                <a href="#" class="order-now-btn" onclick="document.getElementById('cartForm-@product.ProductId').submit();">
                                    Order Now
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- end offer section -->
