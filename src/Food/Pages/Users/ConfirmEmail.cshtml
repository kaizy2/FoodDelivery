@page
@model Food.Pages.Users.ConfirmEmailModel
@{
    Layout = "/Pages/Users/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Confirm Email";
}

<h2>@ViewBag.Title</h2>

@if (Model.IsConfirmed)
{
    <div class="alert alert-success">
        <h4 class="alert-heading">Email Confirmation Successful!</h4>
        <p>Congratulations, your email has been successfully confirmed. You can now log in to your account.</p>
    </div>
}
else
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Confirmation Error</h4>
        <p>The confirmation link is either invalid or expired. Please check your email again or request a new confirmation code.</p>
    </div>
}
