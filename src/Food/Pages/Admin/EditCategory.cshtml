@page "{id:int}"

@model Food.Pages.Admin.EditCategoryModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="text-uppercase">Edit Category</h2>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">Edit Category</div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Category.CategoryId" />
                        <div class="form-group">
                            <label for="CategoryName">Category Name</label>
                            <input type="text" class="form-control" id="CategoryName" asp-for="Category.Name" placeholder="Enter Category Name" />
                        </div>
                        <div class="form-group">
                            <label for="CategoryImage">Category Image</label>
                            <input type="file" class="form-control-file" id="CategoryImage" name="CategoryImage" />
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="IsActive" asp-for="Category.IsActive" />
                            <label class="form-check-label" for="IsActive">Is Active</label>
                        </div>

                        <!-- Nút Update -->
                        <button type="submit" asp-page-handler="Upload" class="btn btn-primary mt-3">Update</button>
                        <!-- Nút Cancel -->
                        <a asp-page="./ViewCategory" class="btn btn-secondary mt-3">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>