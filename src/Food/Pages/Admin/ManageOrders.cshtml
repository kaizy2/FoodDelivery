@page
@model Food.Pages.Admin.ManageOrdersModel
@{
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h1>Manage Orders</h1>
    <ul class="breadcrumb">
        <li>
            <a href="#">Manage Orders</a>
        </li>
        <li><i class='bx bx-chevron-right'></i></li>
        <li>
            <a class="active" href="#">Home</a>
        </li>
    </ul>
</div>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order No</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>User</th>
                <th>Status</th>
                <th>Edit</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderDetailsId</td>
                    <td>@order.OrderNo</td>
                    <td>@order.Product?.Name</td>
                    <td>@order.Quantity</td>
                    <td>@order.User?.Name</td>
                    <td>@order.Status</td>
                    <td>
                        <form method="post" asp-page-handler="UpdateStatus">
                            <input type="hidden" name="OrderId" value="@order.OrderDetailsId" />
                            <select name="NewStatus" class="form-control">
                                <option value="Pending" selected="@order.Status == " Pending"">Pending</option>
                                <option value="Completed" selected="@order.Status == " Completed"">Completed</option>
                                <option value="Cancelled" selected="@order.Status == " Cancelled"">Cancelled</option>
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm mt-2">Update</button>
                        </form>
                    </td>
                    <td>@order.OrderDate.ToString("dd-MM-yyyy hh:mm:ss tt")</td>
                    <td>
                        <form method="post" asp-page-handler="DeleteOrder" asp-route-id="@order.OrderDetailsId" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<style>
    /* Định dạng cho phần tiêu đề */
    .page-header {
        padding: 20px;
        background-color: #f9f9f9;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .page-header h1 {
            font-size: 2em;
            font-weight: bold;
            margin: 0;
        }

    .breadcrumb {
        padding: 0;
        margin: 10px 0;
        list-style: none;
        color: #6c757d;
        font-size: 0.9em;
    }

        .breadcrumb li {
            display: inline;
            margin-right: 5px;
        }

            .breadcrumb li a {
                color: #007bff;
                text-decoration: none;
            }

                .breadcrumb li a.active {
                    color: #6c757d;
                }

        .breadcrumb i {
            margin: 0 5px;
        }

    /* Định dạng bảng */
    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        text-align: center;
        padding: 15px;
    }

    .table td {
        text-align: center;
        padding: 12px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    /* Nút hành động */
    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
    }

    .btn-primary {
        background-color: #28a745;
        border: none;
    }

        .btn-primary:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Định dạng phân trang */
    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .pagination .page-link {
        color: #007bff;
    }

        .pagination .page-link:hover {
            color: #0056b3;
        }
</style>
